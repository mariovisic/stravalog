<%= simple_form_for [ :admin, activity_form ] do |form| %>
  <%= form.input :title %>
  <%= form.input :body, as: :text, input_html: { rows: 20 } %>
  <%= form.input :strava_activity_id, as: :hidden %>
  <%= form.input :strava_segment_id, collection: activity_form.segment_collection, hint: '(Optional) Select segment for lapped races' %>

  <%= form.submit activity_form.persisted? ? 'Update Activity' : 'Create Activity', class: 'button' %>
<% end %>
