<div class="activity">
  <h2 class="activity__title"><%= @activity.title %></h2>

  <div class="activity__body">
    <%= simple_format(@activity.body) %>
  </div>

  <div class="activity__stats">
    <dl>
      <dt>Moving Time:</dt>
      <dd><%= @activity_stats.moving_time %></dd>

      <dt>Metres Climbed:</dt>
      <dd><%= @activity_stats.metres_climbed %></dd>

      <dt>Average Speed:</dt>
      <dd><%= @activity_stats.average_speed %></dd>
    </dl>
  </div>
</div>
